{
  "name": "horat1us/yii2-inn-validator",
  "description": "Yii2 INN (UA) Validator",
  "type": "library",
  "require": {
    "php": "^8.4",
    "yiisoft/yii2": "^2.0.31",
    "horat1us/inn-parser": "^1.2",
    "horat1us/yii2-model-schema": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "squizlabs/php_codesniffer": "^3.10",
    "horat1us/yii2-asset-free": "^1.0"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "horat1us",
      "email": "reclamme@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Horat1us\\Inn\\Yii\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Horat1us\\Inn\\Yii\\Tests\\": "tests/"
    },
    "files": [
      "vendor/yiisoft/yii2/Yii.php"
    ]
  },
  "scripts": {
    "lint": "phpcs --standard=PSR12 ./src ./tests",
    "phpcbf": "phpcbf --standard=PSR12 ./src ./tests",
    "cover": "phpunit --coverage-clover=coverage.xml",
    "test": "phpunit"
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": false
    }
  }
}
